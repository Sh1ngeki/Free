<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="#04594A"/>
            <stroke
                android:width="2.3dp"
                android:color="#04594A" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="#525353"/>
            <stroke
                android:width="2.3dp"
                android:color="#2B2E2E" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="#2B2E2E"/>
            <stroke
                android:width="2.3dp"
                android:color="#2B2E2E" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#2B2E2E"
                android:centerColor="#2B2E2E"
                android:endColor="#2B2E2E"
                />
            <stroke
                android:width="0.7dp"
                android:color="#2B2E2E" />
            <corners
                android:radius="30dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>
</selector>